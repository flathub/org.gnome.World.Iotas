{
    "app-id": "org.gnome.World.Iotas",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "iotas",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--share=network",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets"
    ],
    "cleanup" : [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        "python3-requirements.json",
        "katex.json",
        {
            "name" : "pandoc",
            "buildsystem": "simple",
            "build-commands": [
                "cp bin/pandoc /app/bin/pandoc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.8.1/pandoc-3.8.1-linux-amd64.tar.gz",
                    "sha256": "2d9086a2d01e7887797e0cc4f07a8fa6008b34f89612dd9214192c0008ab58ab",
                    "only-arches": ["x86_64"]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.8.1/pandoc-3.8.1-linux-arm64.tar.gz",
                    "sha256": "b333dd83017cd0ca3748146c051034fff4eb0b05677e47f1aea36aa5240fd3b5",
                    "only-arches": ["aarch64"]
                }
            ]
        },
        {
            "name" : "iotas",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/iotas.git",
                    "tag": "0.12.1",
                    "commit": "fdd88d6f077a2da6e33c81b56dbe3967224917f4"
                }
            ]
        }
    ]
}
