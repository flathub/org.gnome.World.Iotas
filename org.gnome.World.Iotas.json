{
    "app-id": "org.gnome.World.Iotas",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "iotas",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--share=network",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets"
    ],
    "cleanup" : [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        "python3-requirements.json",
        {
            "name" : "pandoc",
            "buildsystem": "simple",
            "build-commands": [
                "cp bin/pandoc /app/bin/pandoc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.2/pandoc-3.2-linux-amd64.tar.gz",
                    "sha256": "ea3f96dde56ae1577c81184694b8576d8efec52e168ce49a6e7df1441f428289",
                    "only-arches": ["x86_64"]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.2/pandoc-3.2-linux-arm64.tar.gz",
                    "sha256": "93d6c414e5994e254aec840be8428016a70167c835ca3227378217937bd9a01a",
                    "only-arches": ["aarch64"]
                }
            ]
        },
        {
            "name" : "iotas",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/iotas.git",
                    "tag": "0.8.0",
                    "commit": "6d9de029d5d7f9ee791c9b008c893e46eb3792f9"
                }
            ]
        }
    ]
}
