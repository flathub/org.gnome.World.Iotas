{
    "app-id": "org.gnome.World.Iotas",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "iotas",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--share=network",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets"
    ],
    "cleanup" : [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        "python3-requirements.json",
        "katex.json",
        {
            "name" : "pandoc",
            "buildsystem": "simple",
            "build-commands": [
                "cp bin/pandoc /app/bin/pandoc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.8/pandoc-3.8-linux-amd64.tar.gz",
                    "sha256": "1a035c1f7d295c353f614461fa4bc13d703c0e865387d44341d1556d703de59a",
                    "only-arches": ["x86_64"]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.8/pandoc-3.8-linux-arm64.tar.gz",
                    "sha256": "87cac7b2b02495c0533f75193b40837c50c5c313d905b19829c721d617a073b9",
                    "only-arches": ["aarch64"]
                }
            ]
        },
        {
            "name" : "iotas",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/iotas.git",
                    "tag": "0.12.0",
                    "commit": "3a472fa58903c58f2315bfaa996aa24aed0d0d32"
                }
            ]
        }
    ]
}
