{
    "app-id": "org.gnome.World.Iotas",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "iotas",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--share=network",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets"
    ],
    "cleanup" : [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        "python3-requirements.json",
        {
            "name" : "pandoc",
            "buildsystem": "simple",
            "build-commands": [
                "cp bin/pandoc /app/bin/pandoc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.1.13/pandoc-3.1.13-linux-amd64.tar.gz",
                    "sha256": "db556c98cf207d2fddc088d12d2e2f367d9401784d4a3e914b068fa895dcf3f0",
                    "only-arches": ["x86_64"]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.1.13/pandoc-3.1.13-linux-arm64.tar.gz",
                    "sha256": "678c09ac4227c88b491f6e75491e6da871fd08d79b8c0f0ee37b611f01ad3d25",
                    "only-arches": ["aarch64"]
                }
            ]
        },
        {
            "name" : "iotas",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/iotas.git",
                    "tag": "0.2.14",
                    "commit": "d8011843a0478f0f7c51b8c576ebb24b97dc9d3b"
                }
            ]
        }
    ]
}
