{
    "name" : "katex",
    "buildsystem": "simple",
    "build-options": {
        "env": {
            "DEST": "/app/share/iotas/media/"
        }
    },
    "build-commands": [
        "mkdir -p ${DEST}/js/",
        "cp katex.min.js ${DEST}/js/",
        "mkdir -p ${DEST}/css/web/",
        "cp katex.min.css ${DEST}/css/web/",
        "mkdir -p ${DEST}/css/web/fonts/",
        "cp fonts/*.woff2 ${DEST}/css/web/fonts/"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/KaTeX/KaTeX/releases/download/v0.16.22/katex.tar.gz",
            "sha256": "055cd79635251419ed908c334582a41dee341d8af05b4c5588277e145127a78f"
        }
    ]
}
